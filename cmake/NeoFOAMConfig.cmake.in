@PACKAGE_INIT@

set(NeoN_PROJECT_NAME "@PROJECT_NAME@")
set(NeoN_PROJECT_VERSION @NeoN_VERSION@)
set(NeoN_PROJECT_DESCRIPTION "@NeoN_DESCRIPTION@")

# Extra version information
set(NeoN_VERSION_MAJOR @NeoN_VERSION_MAJOR@)
set(NeoN_VERSION_MINOR @NeoN_VERSION_MINOR@)
set(NeoN_VERSION_PATCH @NeoN_VERSION_PATCH@)

# Git information
set(NeoN_GIT_BRANCH "@NeoN_GIT_BRANCH@")
set(NeoN_GIT_REVISION "@NeoN_GIT_REVISION@")
set(NeoN_GIT_SHORTREV "@NeoN_GIT_SHORTREV@")

# CMake build configuration
set(NeoN_BUILD_TYPE "@CMAKE_BUILD_TYPE@")
set(NeoN_BUILD_SHARED_LIBS "@BUILD_SHARED_LIBS@")
set(NeoN_DEBUG_POSTFIX "@CMAKE_DEBUG_POSTFIX@")

# Compiler configuration
set(NeoN_CXX_COMPILER "@CMAKE_CXX_COMPILER@")
set(NeoN_CXX_COMPILER_VERSION @CMAKE_CXX_COMPILER_VERSION@)

set(NeoN_CXX_FLAGS "@CMAKE_CXX_FLAGS@")
set(NeoN_CXX_FLAGS_DEBUG "@CMAKE_CXX_FLAGS_DEBUG@")
set(NeoN_CXX_FLAGS_RELEASE "@CMAKE_CXX_FLAGS_RELEASE@")

set(NeoN_EXE_LINKER_FLAGS "@CMAKE_EXE_LINKER_FLAGS@")
set(NeoN_EXE_LINKER_FLAGS_DEBUG "@CMAKE_EXE_LINKER_FLAGS_DEBUG@")
set(NeoN_EXE_LINKER_FLAGS_RELEASE "@CMAKE_EXE_LINKER_FLAGS_RELEASE@")

# NeoN configuration
set(NeoN_BUILD_TESTS @NeoN_BUILD_TESTS@)

set(NeoN_SKIP_DEPENDENCY_UPDATE @NeoN_SKIP_DEPENDENCY_UPDATE@)
set(NeoN_EXPORT_BUILD_DIR @NeoN_EXPORT_BUILD_DIR@)
set(NeoN_VERBOSE_LEVEL @NeoN_VERBOSE_LEVEL@)

set(NeoN_WITH_CLANG_TIDY @NeoN_WITH_CLANG_TIDY@)
set(NeoN_WITH_IWYU @NeoN_WITH_IWYU@)
set(NeoN_CLANG_TIDY_PATH @NeoN_CLANG_TIDY_PATH@)
set(NeoN_IWYU_PATH @NeoN_IWYU_PATH@)

# NeoN compiler information
set(NeoN_CXX_COMPILER "@CMAKE_CXX_COMPILER@")
set(NeoN_CXX_COMPILER_SHORT "@CMAKE_CXX_COMPILER_ID@:@CMAKE_CXX_COMPILER_VERSION@")

# NeoN installation configuration
set(NeoN_INSTALL_PREFIX "@PACKAGE_CMAKE_INSTALL_PREFIX@")
set(NeoN_INSTALL_INCLUDE_DIR "@PACKAGE_CMAKE_INSTALL_FULL_INCLUDEDIR@")
set(NeoN_INSTALL_LIBRARY_DIR "@PACKAGE_CMAKE_INSTALL_FULL_LIBDIR@")
set(NeoN_INSTALL_RPATH_FOR_HIP "-Wl,-rpath,${NeoN_INSTALL_LIBRARY_DIR}")
set(NeoN_INSTALL_RPATH @NeoN_INSTALL_RPATH@)
set(NeoN_INSTALL_RPATH_USE_ORIGIN @NeoN_INSTALL_RPATH_USE_ORIGIN@)
set(NeoN_INSTALL_RPATH_DEPENDENCIES @NeoN_INSTALL_RPATH_DEPENDENCIES@)

list(APPEND CMAKE_PREFIX_PATH "${NeoN_INSTALL_PREFIX}")

set(NeoN_INTERFACE_LINK_LIBRARIES "@NeoN_INTERFACE_LINK_LIBRARIES@")
set(NeoN_INTERFACE_LINK_FLAGS "@NeoN_INTERFACE_LINK_FLAGS@")
set(NeoN_INTERFACE_CXX_FLAGS "@NeoN_INTERFACE_CXX_FLAGS@")
